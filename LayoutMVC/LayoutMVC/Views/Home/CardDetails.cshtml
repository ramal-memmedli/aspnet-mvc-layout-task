@model Mountain;

        <section class="container my-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">Height - @Model.Height</p>
                    <p class="card-text"><small class="text-muted">Location - @Model.Location</small></p>
                    <a href="/" class="btn btn-outline-dark">Go back to mountains</a>
                </div>
                <img src="@Model.ImageUrl" class="card-img-bottom">
            </div>
        </section>